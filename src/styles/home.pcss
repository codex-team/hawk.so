.yard-home {
  font-size: 20px;

  @media (--media-mobile) {
    padding: 15px;
  }

  &__title {
    font-size: 2.6em;
    color: #fff;
  }

  &__caption {
    line-height: 1.4em;
  }

  &__links {
    margin-top: 1em;
    font-weight: bold;

    li {
      display: inline-block;
      margin-right: 1em;
      margin-bottom: 0.6em;
    }

    a {
      color: #fff;

      &.primary {
        color: var(--color-link-on-dark);
      }

    }
  }

  &__figure {
    margin: 0 0 30px;
    color: var(--color-text-gray);

    img {
      margin-top: 1em;
      max-width: 100%;
    }
  }
}
